{% extends 'base.html.twig' %}

{% block title %}
    Liste des articles
{% endblock title %}


{% block article %}
        {% for article in articles %}
                <div class="article">
                        <a href="{{ path('show_article', {'id': article.id}) }}">
                                <h1>{{article.title}}</h1>
                        </a>
                                <div class="image visible"><img src="{{article.image}}" alt="{{ article.title }}" class="resp anim"></div>
                                <p>{{ article.createdAt|date('d/m/Y') }}</p>
                </div>

        {% endfor %}
{% endblock article %}