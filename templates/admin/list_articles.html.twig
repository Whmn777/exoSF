{% extends 'base.html.twig' %}

{% block title %}
    Liste des articles
{% endblock title %}

{% block header %}

{% endblock header %}


{% block article %}
    {% if articles|length>0 %}
        {% for article in articles %}
            <div class="article">
                {% if article.category %}
                <h2>{{ article.category.title }}</h2>
                (%endif%}
                <a href="{{ path('admin_show_article', {'id': article.id}) }}">
                    <h1>{{article.title}}</h1>
                </a>
                <div class="image visible"><img src="{{article.image}}" alt="{{ article.title }}" class="resp anim"></div>
                <p>{{ article.createdAt|date('d/m/Y') }}</p>

                <a href="{{ path('admin_delete_article', {'id': article.id}) }}">Supprimer</a>
            </div>

        {% endfor %}
    {% else %}
        <p>Il n'y a pas d'article correspondant Ã  votre recherche</p>
    {% endif %}
{% endblock article %}