{% extends 'base.html.twig' %}

{% block title %}
    Page d'accueil
{% endblock title %}

{% block article %}

    {% for articleRecent in articleRecents %}
        <div class="article">
                <h2>{{articleRecent.title}}</h2>
            <div class="image visible"><img src="{{articleRecent.image}}" alt="{{ articleRecent.title }}" class="resp anim"></div>
            <p>{{ articleRecent.createdAt|date('d/m/Y') }}</p>
        </div>

    {% endfor %}


{% endblock article %}








