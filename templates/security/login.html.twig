{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block article %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger col-6 col-md-4 col-lg-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 col-6 col-md-4 col-lg-3">

            <h1>Bonjour {{ app.user.username }} !</h1>
            <button class="btn btn-lg btn-primary" type="submit"><a href="{{ path('app_logout') }}" class="text-light">Se d√©connecter</a></button>
        </div>
    {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous identifier</h1>

        <div class="form-group col-6 col-md-4 col-lg-3">
            <label for="inputUsername">Identifiant</label>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
        </div>

        <div class="form-group col-6 col-md-4 col-lg-3">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Valider
    </button>
</form>
{% endblock %}
